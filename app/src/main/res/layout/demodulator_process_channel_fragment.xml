<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/signal_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_graph_label"
        android:layout_marginTop="16dp"
        android:text="@string/signal"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/signal_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_graph_signal"
        app:layout_constraintTop_toBottomOf="@id/signal_label" />

    <TextView
        android:id="@+id/data_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_graph_label"
        android:layout_marginTop="16dp"
        android:text="@string/channel_data"
        app:layout_constraintTop_toBottomOf="@id/signal_chart" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/data_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_graph_signal"
        app:layout_constraintTop_toBottomOf="@id/data_label" />

</androidx.constraintlayout.widget.ConstraintLayout>